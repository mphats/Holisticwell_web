<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HolisticWell360</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .hero-bg {
            background-image: url('<%= heroImage %>');
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">

    <!-- Navigation -->
    <nav class="bg-blue-500 text-white p-4 fixed w-full top-0">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-lg font-bold"><img src="<%= logoImage %>" alt="Logo" class="w-10 h-10 rounded-full"></a>
            <div class="hidden lg:flex space-x-6">
                <a href="#features" class="hover:text-blue-300">Features</a>
                <a href="#testimonials" class="hover:text-blue-300">Testimonials</a>
                <a href="#download" class="hover:text-blue-300">Get Started</a>
            </div>
            <button id="menuToggle" class="lg:hidden text-2xl focus:outline-none">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        <div id="mobileMenu" class="hidden flex-col bg-blue-600 text-white space-y-2 p-4 lg:hidden">
            <a href="#features" class="block py-2">Features</a>
            <a href="#testimonials" class="block py-2">Testimonials</a>
            <a href="#download" class="block py-2">Get Started</a>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-bg h-screen flex items-center justify-center text-white relative">
        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('<%= heroOverlayImage %>');"></div>
        <div class="absolute inset-0 bg-blue-900 opacity-50"></div> <!-- Overlay to darken image -->
        <div class="relative z-10 text-center p-6">
            <h1 class="text-4xl lg:text-6xl font-bold mb-4">Your Wellness Journey Begins Here</h1>
            <p class="text-lg lg:text-xl mb-8">Track your health, get personalized insights, and reach your wellness goals.</p>
            <a href="#download" class="bg-pink-500 hover:bg-pink-600 text-white font-bold py-3 px-6 rounded-lg">Get Started</a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-16 bg-white">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold mb-8 text-gray-700">Platform Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
                <% features.forEach(feature => { %>
                    <div class="p-6 bg-gray-100 rounded-lg shadow-md">
                        <i class="<%= feature.icon %> text-4xl mb-4" style="color: <%= feature.color %>"></i>
                        <h3 class="text-xl font-semibold mb-2"><%= feature.title %></h3>
                        <p><%= feature.description %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="py-16 bg-gray-100">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold mb-8 text-gray-700">What Our Users Say</h2>
            <div id="testimonialContainer" class="grid grid-cols-1 md:grid-cols-3 gap-10">
                <% testimonials.forEach(testimonial => { %>
                    <div class="p-6 bg-white rounded-lg shadow-md">
                        <p class="mb-4">"<%= testimonial.message %>"</p>
                        <h4 class="text-lg font-semibold">- <%= testimonial.user_name %></h4>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Feedback Section -->
    <section id="feedback" class="py-16 bg-white">
        <div class="container mx-auto flex flex-col lg:flex-row items-center lg:items-start text-center lg:text-left space-y-6 lg:space-y-0 lg:space-x-8">
            
            <!-- Feedback Image -->
            <div class="w-full lg:w-1/2">
                <img src="<%= feedbackImage %>" alt="Feedback Image" class="w-full h-auto rounded-lg shadow-md">
            </div>
            
            <!-- Feedback Form -->
            <div class="w-full lg:w-1/2">
                <h2 class="text-3xl font-bold mb-4 text-gray-700">We Value Your Feedback</h2>
                <p class="mb-6 text-lg text-gray-500">Let us know how we can improve your experience.</p>
                
                <form id="feedbackForm" class="bg-gray-100 p-6 rounded-lg shadow-lg" method="POST" action="/feedback">
                    <input type="text" name="userName" placeholder="Your Name" class="w-full mb-4 p-3 rounded-lg border border-gray-300 focus:outline-none" required>
                    <input type="email" name="userEmail" placeholder="Your Email" class="w-full mb-4 p-3 rounded-lg border border-gray-300 focus:outline-none" required>
                    <textarea name="userMessage" placeholder="Your Feedback" rows="4" class="w-full mb-4 p-3 rounded-lg border border-gray-300 focus:outline-none" required></textarea>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg">Submit Feedback</button>
                </form>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section id="download" class="py-16 bg-blue-500 text-white text-center">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold mb-4">Start Your Journey Today</h2>
            <p class="text-lg mb-8">Create an account and take the first step towards a healthier, happier life.</p>
            <a href="/api/users/register" class="bg-pink-500 hover:bg-pink-600 text-white font-bold py-3 px-6 rounded-lg">Create Account</a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 bg-gray-900 text-gray-400 text-center">
        <p>&copy; 2023 Wellness Platform. All rights reserved.</p>
        <div class="flex justify-center space-x-4 mt-4">
            <a href="#"><i class="fab fa-facebook text-xl hover:text-white"></i></a>
            <a href="#"><i class="fab fa-twitter text-xl hover:text-white"></i></a>
            <a href="#"><i class="fab fa-instagram text-xl hover:text-white"></i></a>
        </div>
    </footer>

</body>
</html>
